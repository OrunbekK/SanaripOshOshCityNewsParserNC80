{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/parser-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=(local);Initial Catalog=OshCitySanarip;User ID=sa;Password=GPRS;MultipleActiveResultSets=true;Connection Timeout=30;Encrypt=false"
  },
  "ParserSettings": {
    "NewsPageUrl": "https://oshcity.gov.kg/ru/novosti/",
    "HttpTimeoutSeconds": 30,
    "RateLimitRequestsPerSecond": 2,
    "RetryPolicyAttempts": 3,
    "RetryDelayMilliseconds": 1000
  }
}